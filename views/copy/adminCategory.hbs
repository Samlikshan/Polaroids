    <link rel="stylesheet" href="/stylesheets/adminCategory.css">

    <div class="container">
        <div class="sidebar">
            <ul class="menu">
                <li><a href="/admin/">Dashboard</a></li>
                <li><a href="/admin/products">Products</a></li>
                <li><a href="/admin/users">Users</a></li>
                <li><a href="#orders">Orders</a></li>
                <li><a href="/admin/categories" class="active">Category</a></li>
                <li><a href="#offers">Offers</a></li>
                <li><a href="#coupons">Coupons</a></li>
                <li><a href="#banner">Banner</a></li>
            </ul>
            <ul class="bottom">
                <li><a href="#reset">Reset Password</a></li>
                <li><a href="#logout">Logout</a></li>
            </ul>
        </div>
        <div class="main-content">
            <h1>Categories</h1>
            <a href="/admin/add-category"><button class="add-category">Add New Category</button></a>
            <div class="category-container">
                <div class="category-group">
                    {{#each categories}}
                    <div class="category">
                        <h2>{{categoryName}}</h2>
                        {{#each subCategories}}
                        <ul>
                            <li>{{this}}</li>
                        </ul>
                        {{/each}}
                        <a href="/admin/edit-category/{{id}}"><button class="add-button">+</button></a>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>