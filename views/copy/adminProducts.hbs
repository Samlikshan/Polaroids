 <link rel="stylesheet" href="/stylesheets/adminProducts.css">
 
 <div class="container">
        <div class="sidebar">
            <ul class="menu">
                <li><a href="/admin/">Dashboard</a></li>
                <li><a href="/admin/products">Products</a></li>
                <li><a href="/admin/users" class="active">Users</a></li>
                <li><a href="#orders">Orders</a></li>
                <li><a href="/admin/categories" class="active">Category</a></li>
                <li><a href="#offers">Offers</a></li>
                <li><a href="#coupons">Coupons</a></li>
                <li><a href="#banner">Banner</a></li>
            </ul>
            <ul class="bottom">
                <li><a href="#reset">Reset Password</a></li>
                <li><a href="#logout">Logout</a></li>
            </ul>
        </div>
        <div class="main-content">
            <h1>Products</h1>
            <div class="search-add">
                <input type="text" placeholder="Search">
                <a href="/admin/add-product"><button class="add-button">+</button></a>
            </div>
            <div class="product-list">
                {{#each products}}
                <div class="product-item">
                    <img src="{{productImages.[0]}}" alt="Product Image">
                    <div class="product-details">
                        <p><strong>{{productName}}</strong></p>
                        {{!-- <p>Category</p> --}}
                        <p>${{price}}.00</p>
                    </div>
                    <button class="disable-button">Disable</button>
                </div>
                {{/each}}
            </div>
        </div>
    </div>