   <div class="main-content">
    <h1>Categories</h1>
    <div class="category-container">
        <form id="categoryForm" class="add-category-form" action="/admin/edit-category/{{id}}" method="post">
            
            <input type="text" id="categoryName" name="categoryName" value="{{this.categoryName}}">
            <!-- Preloaded subcategories -->
            <div id="preloadedKeyFields">
                {{#each subCategories}}
                <div class="key-field">
                    <input type="text" name="subCategories" value="{{this}}">
                    <button type="button" class="delete-btn" onclick="removeField(this)">&#10006;</button>
                </div>
                {{/each}}
            </div>

            <!-- Container for dynamically added subcategories -->
            <div id="dynamicKeyFields"></div>

            <button type="button" id="addKeyBtn" class="add-button" onclick="addField()">+</button>
            <div class="form-buttons">
                <button type="submit" class="save-btn">Save</button>
                <a href="/admin/categories"><button type="button" class="cancel-btn">Cancel</button></a>    
            </div>
        </form>
    </div>
</div>
